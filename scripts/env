#Environment variables
export EDITOR=vim
export TERMINAL=rxvt-unicode
export GIT_EDITOR=vim
export GIT_AUTHOR_NAME='eamonn costello'
export GIT_AUTHOR_EMAIL='eamonncostello@gmail.com'
export LC_ALL=en_IE.UTF-8
export CURRENT_BLOG=$HOME/blogs/myBlog/
export VIM_PLUGINS=$HOME/.vim/plugins.vim
#Path Additions
#Set PATH so it includes user's private bin if it exists
if [ -d ~/bin ]; then
    PATH=$HOME/bin:$PATH
fi

#Add golang to the path
if [ -d /usr/local/go/bin ]; then
    PATH=/usr/local/go/bin:$PATH
fi
